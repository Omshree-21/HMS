<section class="profile-media reveal" style="margin-bottom:16px">
  <img alt="Our Specialists" src="https://images.unsplash.com/photo-1584982751601-97dcc096659c?q=80&w=1600&auto=format&fit=crop" referrerpolicy="no-referrer" onerror="this.onerror=null;this.src='/doctor-placeholder.svg'" />
</section>
<section>
  <h2>Our Specialists</h2>
  <div class="grid">
    <% doctors.forEach(d => { %>
      <div class="card doctor-card reveal in">
        <div class="thumb">
          <img alt="<%= d.name %>, <%= d.specialization %>" src="<%= d.photo %>" referrerpolicy="no-referrer" onerror="this.onerror=null;this.src='/doctor-placeholder.svg'" />
        </div>
        <div>
          <h3><a href="/doctors/<%= d.id %>"><%= d.name %></a></h3>
          <p class="muted"><%= d.specialization %></p>
          <p><%= d.bio || '' %></p>
          <% if (currentUser && currentUser.role === 'patient') { %>
            <a class="btn" href="/appointments/new/<%= d.id %>">Book Appointment</a>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>
</section>
